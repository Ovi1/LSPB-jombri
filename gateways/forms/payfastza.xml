<form>
	<fieldset name="settings">
		<field type="text" name="payfastzaMerchantId" id="payfastzaMerchantId" label="PayFast Merchant ID" description="Enter PayFast merchant ID to which the payments will be sent" size="20" default="" maxLength="20" class="required" />
