		<field type="text" name="payfastzaAuthToken" id="payfastzaAuthToken" label="PayFast Authentication Token" description="Enter PayFast Authentication Token" size="45" default="" maxLength="45" class="required" />
		<field type="radio" name="payfastTestmode" id="payfastTestmode" label="Test Mode" default="0" description="Set it to Yes to test the gateway in Sandbox mode">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
	</fieldset>
